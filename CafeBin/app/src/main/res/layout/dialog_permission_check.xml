<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbarDefaultDelayBeforeFade="500000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dialog_content_bg"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/dialog_title_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/permission_title"
                android:textColor="@color/dialog_title_font"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_content_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="@string/permission_mag"
                android:textColor="@color/dialog_content_main_font"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/permission_mag_1"
                android:textColor="@color/dialog_content_sub_font"
                android:textSize="10sp" />

		</LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical" >

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="200dp"
               android:layout_weight="0.30"
               android:src="@drawable/permission_imge" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:paddingTop="5dp"
               android:text="@string/permission_mag2"
               android:textColor="@color/dialog_content_subs_font"
               android:textSize="13sp" />
           
       </LinearLayout>
       
       
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/down_select_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:gravity="center|center_horizontal"
                android:text="@string/permission_mag3_title"
                android:textColor="@color/dialog_content_main_font"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="@string/permission_mag3"
                android:textColor="@color/dialog_content_main_font"
                android:textSize="15sp" />
            
        </LinearLayout>
        
              <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/down_select_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:gravity="center|center_horizontal"
                android:text="@string/permission_mag4_title"
                android:textColor="@color/dialog_content_main_font"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="@string/permission_mag4"
                android:textColor="@color/dialog_content_main_font"
                android:textSize="15sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/down_select_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:gravity="center|center_horizontal"
                android:text="@string/permission_mag5_title"
                android:textColor="@color/dialog_content_main_font"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="@string/permission_mag5"
                android:textColor="@color/dialog_content_main_font"
                android:textSize="15sp" />
            
        </LinearLayout>
           
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dialog_content_sep_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/dialog_title_bg"
                android:text="@string/permission_ok"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@color/down_select_item_bg"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>